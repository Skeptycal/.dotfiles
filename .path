#!/usr/bin/env bash
# *#############################################################################
# ${PATH//:/\\n}
# ${PATH// /}
function _set_paths() {
    # *## PYTHONPATH ###########################################################
    PYTHONPATH="\
    /usr/local/Cellar/python/3.7.3/Frameworks/Python.framework/Versions/3.7/Resources/Python.app/Contents/MacOS/python:\
    /Volumes/Data/skeptycal/anaconda3/lib/python3.7/site-packages:\
    /Volumes/Data/skeptycal/bin/utilities/python:\
    /Volumes/Data/skeptycal/bin/utilities/apps/python:\
    /usr/bin/python:\
    /usr/local/bin/python:\
    $PYTHONPATH"

    PYTHONPATH=${PYTHONPATH// /}
    export PYTHONPATH

    MANPATH="\
    /usr/local/opt/coreutils/libexec/gnuman:\
    /usr/local/man:\
    $MANPATH"

    MANPATH=${MANPATH// /}
    export MANPATH

    # *## shims ################################################################
    # node v8.16.0
    # $HOME/node-v8.16.0-darwin-x64/bin:\

    # python 2.7.16 (from brew install python@2)
    # /usr/local/bin/python2
    # /usr/local/bin/pip2
    # * move up /usr/local/bin ... python is symlinked to python2 already

    # *## path #################################################################
    PATH="\
    $HOME/bin:\
    /usr/local/opt/coreutils/libexec/gnubin:\
    $HOME/bin/utilities:\
    $HOME/bin/utilities/python:\
    $HOME/bin/utilities/php:\
    $HOME/bin/utilities/php/includes:\
    $HOME/bin/utilities/scripts:\
    $HOME/bin/utilities/apps:\
    $HOME/.composer/vendor/bin:\
    $HOME/.composer/vendor/squizlabs/php_codesniffer/bin:\
    $HOME/.local:\
    $HOME/.local/bin:\
    $HOME/.dotfiles:\
    /usr/local/lib/node_modules:\
    /usr/local/Cellar/python/3.7.3/Frameworks/Python.framework/Versions/3.7/Resources/Python.app/Contents/MacOS:\
    /Applications/Postgres.app/Contents/Versions/latest/bin:\
    /Applications/Visual Studio Code.app/Contents/Resources/app/bin:\
    /usr/local/anaconda3/bin:\
    /usr/local/opt/ruby/bin:\
    /usr/local/lib/ruby/gems/2.6.0/bin:\
    /usr/local/go/bin:\
    /usr/local/bin:\
    /usr/bin:\
    /bin:\
    /usr/local/opt:\
    /opt/local/bin:\
    /opt/local/sbin:\
    /usr/local:\
    /usr/local/sbin:\
    /usr/sbin:\
    /sbin:\
    /usr/libexec:\
    /Library/TeX/texbin:\
    /usr/local/share/dotnet:\
    /opt/X11/bin:\
    $HOME/.dotnet/tools:\
    /Library/Frameworks/Mono.framework/Versions/Current/Commands:\
    /Applications/Postgres.app/Contents/Versions/latest/bin:\
    /Applications/Xamarin Workbooks.app/Contents/SharedSupport/path-bin:\
    $HOME/perl5/bin:\
    $HOME/.cargo/bin:\
    $HOME/.rvm/bin:\
    $HOME/bin/utilities/git-achievements:\
    "

    PATH=${PATH// /}
    export PATH

    # ! If needed, add RVM to PATH for scripting. Make sure this is the\
    # ! last PATH variable change.   $HOME/.rvm/bin:\
}

function _run_debug_paths() {
    # list current versions of common utilities
    ce "Script source:$MAIN $BASH_SOURCE$RESET"
    green "\$PATH is set. Type <path> to list elements."
    # ${PATH//:/\\n}
    # ${PATH// /}
}

# *############################################################################
# * Bam ... make the magic
function _main_paths() {
    _set_paths
    # DEBUG=''
    [[ $DEBUG == '1' ]] && _run_debug_paths
}

_main_paths
